<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/qq" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:background="@drawable/oral_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/new_bar_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/oral_left_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/loginButton"
                android:text="消息" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_bar_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        android:onClick="back_mainActivity"
        android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
</RelativeLayout>